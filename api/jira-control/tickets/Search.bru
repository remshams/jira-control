meta {
  name: Search
  type: http
  seq: 1
}

post {
  url: https://{{url}}/rest/api/3/search
  body: json
  auth: basic
}

auth:basic {
  username: {{username}}
  password: {{token}}
}

body:json {
  {
    "jql": "project = 'NXNXTUI' AND summary ~ 'Project Management'",
    "fields":["id","key","summary", "assignee"]
  }
}
